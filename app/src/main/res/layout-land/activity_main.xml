<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/the_title" />

    <EditText
        android:id="@+id/edit_message2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/edit_message"
        android:hint="@string/the_content" />
    <Button
        android:id="@+id/button1"
        android:layout_width="230dp"
        android:layout_height="40dp"

        android:layout_below="@id/edit_message2"
        android:hint="@string/button1"/>
    <Button
        android:id="@+id/button2"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/button1"
        android:layout_below="@id/edit_message2"
        android:hint="@string/button2"/>
   <Button
        android:id="@+id/button3"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/button2"
        android:layout_below="@id/edit_message2"
        android:hint="@string/button3"/>









</RelativeLayout>